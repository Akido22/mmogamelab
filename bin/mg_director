#!/usr/bin/python2.6

from mg.server import Instance, WebDaemon, WebApplication
from concurrence import dispatch
from mg.cass import DatabasePool
from mg.memcached import MemcachedPool, Memcached
import traceback
import json

def main():
    try:
        inst = Instance()
        daemon = WebDaemon(inst)
        dbpool = DatabasePool((("director-db", 9160),))
        mc = Memcached(MemcachedPool(("director-mc", 11211)), prefix="dir_")
        app = WebApplication(inst, dbpool, "director", mc, "int")
        daemon.app = app
        app.modules.load(["director.Director"])
        app.dbrestruct()
        port = daemon.serve(("0.0.0.0", 3000))
    except RuntimeError as e:
        print e
        quit(1)
    except:
        traceback.print_exc()
        quit(1)

dispatch(main)

