#!/usr/bin/python2.6
# -*- coding: utf-8 -*-

from mg import *
from concurrence import dispatch, quit
import os
import logging
import sys
import json

def main():
    try:
        if len(sys.argv) != 4:
            print "usage: mg_conf_get <app> <config.key> <json.value>"
            os._exit(1)
        inst = Instance("conf_get")
        inst.download_config()
        app_tag = sys.argv[1]
        app = WebApplication(inst, app_tag)
        val = json.loads(sys.argv[3])
        conf = app.config_updater()
        conf.set(sys.argv[2], val)
        conf.store()
        sys.stdout.flush()
        os._exit(0)
    except RuntimeError as e:
        logging.error(e)
        os._exit(1)
    except Exception as e:
        logging.exception(e)
        os._exit(1)

dispatch(main)

